<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AlertTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->

        <item name="colorAccent">#f3ce32</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:background">@drawable/shadow_origin</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
